<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:ellipsize="end"
            android:maxEms="14"
            android:maxLines="1"
            android:textColor="@color/c2"
            android:text="第01期 | 给梦想者的书"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c4"
                android:text="2017-2-16"/>

            <TextView
                android:id="@+id/play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_all_started_n"
                android:text="30万"
                android:textColor="@color/c4"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/textTimeHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_time_d"
                android:text="10:30"
                android:textColor="@color/c4" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layoutDownload"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/imgDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/zy_selector_dowload" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>
    <View
        android:layout_below="@id/line"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:background="@color/c6"
        android:layout_height="1dp"/>

</RelativeLayout>