<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@color/c1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imgDel"
            android:layout_toRightOf="@+id/imgAvatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="怎么学好英语"
                android:textColor="@color/c2"
                android:textSize="@dimen/f4" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/icon_name_d"
                android:drawablePadding="4dp"
                android:paddingTop="5dp"
                android:text="周咏炀"
                android:textColor="@color/c4"
                android:textSize="@dimen/f8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textUpdateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="已经更新到35集"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/f8" />

                <TextView
                    android:id="@+id/textSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/icon_folder_d"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:text="12.5M"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/f8" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/c6"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDownCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="已经下载56集"
            android:textColor="@color/c3"
            android:textSize="@dimen/f4" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:background="@color/c3" />

        <TextView
            android:id="@+id/textSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/btn_sorting_n"
            android:gravity="center"
            android:text="正序"
            android:textColor="@color/c4"
            android:textSize="@dimen/f5" />
    </LinearLayout>
</LinearLayout>