<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c7"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:gravity="center|left"
        android:text="绑定"
        />
    <RelativeLayout
        android:id="@+id/phone_line"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/c8"
        android:paddingLeft="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="手机绑定"
            android:textColor="@color/c2" />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/arrow_rightxx"
            android:gravity="center"
            android:text="18682128004" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:gravity="center|left"
        android:text="安全"
        />

    <RelativeLayout
        android:id="@+id/password_line"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/c8"
        android:paddingLeft="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="@color/c2" />


        <TextView
            android:id="@+id/pwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/arrow_rightxx"
            android:gravity="center" />

    </RelativeLayout>
</LinearLayout>