<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@color/c8"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <EditText
            android:id="@+id/pwd_old"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/c8"
            android:gravity="center|left"
            android:hint="旧密码"
            android:inputType="number"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:paddingLeft="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/pwd_one"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/c8"
            android:gravity="center|left"
            android:hint="6-18位字母数字组合密码"
            android:inputType="number"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:paddingLeft="10dp"
           />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />

        <EditText
            android:id="@+id/pwd_two"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/c8"
            android:gravity="center|left"
            android:hint="确认新密码"
            android:inputType="number"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIGKLMNOPQRSTUVWXYZ"
            android:maxLength="18"
            android:paddingLeft="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/save_pwd"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/c5"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/c8"
        android:textSize="19dp" />

</LinearLayout>