<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/c8"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c6"
        />
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginLeft="154dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题标题"
                android:textSize="@dimen/f2" />
            <TextView
                android:id="@+id/textCate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="类别: 情感"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/c3"
                android:textSize="@dimen/f7" />

            <TextView
                android:id="@+id/textAnchor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="主播: 咏炀"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/c3"
                android:textSize="@dimen/f7" />

            <TextView
                android:id="@+id/textPlayNum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="播放: 1万"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/c3"
                android:textSize="@dimen/f7" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/c7"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginLeft="154dp"
                android:paddingTop="10dp"
                android:layout_marginRight="110dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付金额" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/c1"
                    android:text="¥300.00"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="24dp"
            android:id="@+id/imgBg"
            android:layout_width="124dp"
            android:layout_height="155dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/zy_bg_boder1dp_c7"
            android:src="@color/c9" />
</RelativeLayout>